@model TestCoWorking.ViewModels.EditBookingModel
@{
    ViewData["Title"] = "Редагувати";
    Layout = "_DevLayout";
}

<h1 class="text-center">Редагувати - @Model.Name</h1>

<form asp-action="Edit" asp-controller="Developer" asp-route-id="@Model.Id">
    <div asp-validation-summary="All" class="form-group"></div>
    <div>
        <input type="hidden" asp-for="Id"/>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Ім'я</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Start" class="control-label">Початок</label>
        <input type="date" asp-for="Start" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="End" class="control-label">Кінець</label>
        <input type="date" asp-for="End" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Опис</label>
        <textarea type="text" asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="EmployeerCount" class="control-label">Кількість місць</label>
        <input asp-for="EmployeerCount" type="number" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DevEmail" class="control-label">Пошта розробника</label>
        <input asp-for="DevEmail" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="form-control btn btn-success" />
    </div>
</form>

