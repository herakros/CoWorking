@model List<TestCoWorking.Models.Comment>

@{
    ViewData["Title"] = "Коментарі";
    Layout = "_DevLayout";
}

<h1 class="text-center">Коментарі</h1>

@if (Model.Count > 0)
{
    <table class="text-center table">
        <thead class="table-dark">
            <tr>
                <th>Ім'я</th>
                <th>Коментар</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UserName</td>
                    <td>@u.Message</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="text-center">Немає коментарів</h4>
}




