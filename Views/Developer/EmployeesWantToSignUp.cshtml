@model List<TestCoWorking.Models.Employee>

@{
    ViewData["Title"] = "Користувачі";
    Layout = "_DevLayout";
}

<h1 class="text-center">Підписані користувачі</h1>

@if (Model.Count > 0)
{
    <table class="text-center table">
        <thead class="table-dark">
            <tr>
                <th>Ім'я</th>
                <th>Пошта</th>
                <th>Опис</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.FullName</td>
                    <td>@u.Email</td>
                    <td>@u.Description</td>
                    <td>
                        <form asp-action="ConfirmEmployeer" asp-controller="Developer" asp-route-id="@u.Id">
                            <input type="submit" value="Додати" class="form-control btn btn-success" />
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteEmployeer" asp-controller="Developer" asp-route-id="@u.Id">
                            <input type="submit" value="Видалити" class="form-control btn btn-danger" />
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>


}
else
{
    <h4 class="text-center">Немає нових користувачів</h4>
}
