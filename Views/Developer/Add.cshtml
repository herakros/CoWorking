@model TestCoWorking.Models.Booking
@{
    ViewData["Title"] = "Додати";
    Layout = "_DevLayout";
}

<h1 class="text-center">Додати нове бронювання</h1>

<form asp-action="Add" asp-controller="Developer" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Ім'я</label><br />
            <input type="text" asp-for="Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Start" class="control-label">Початок</label><br />
            <input type="date" asp-for="Start" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="End" class="control-label">Кінець</label><br />
            <input type="date" asp-for="End" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Description">Опис</label>
            <textarea type="text" asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Додати" class="form-control" />
        </div>
    </div>
</form>

