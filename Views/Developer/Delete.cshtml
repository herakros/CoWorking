@model TestCoWorking.Models.Booking
@{
    ViewData["Title"] = "Видалення";
    Layout = "_DevLayout";
}

<h1 class="text-center">Видалення</h1>

<div>
    <dl class="dl-horizontal">
        <dt>Ім'я</dt>
        <dd>@Model.Name</dd>

        <dt>Початок</dt>
        <dd>@Model.Start.ToString("d")</dd>

        <dt>Кінець</dt>
        <dd>@Model.End.ToString("d")</dd>
    </dl>

    <div>
        <form asp-controller="Developer" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="form-control btn btn-danger" value="Видалити" />
            </div>
        </form>
    </div>
</div>