@model List<TestCoWorking.Models.User>
@{
    ViewData["Title"] = "Користувачі";
    Layout = "_DevLayout";
}

<h1 class="text-center">Підписані працівники</h1>

<table class="table">
    <tr>
        <th>Ім'я</th>
        <th>Пошта</th>
        <th>Опис</th>
        <th>&nbsp;</th>
    </tr>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Email</td>
            <td>
                <form asp-action="DeleteEmployeer" asp-controller="Developer" asp-route-id="@e.Id">
                    <input type="submit" value="Видалити" class="form-control" />
                </form>
            </td>
        </tr>
    }
</table>