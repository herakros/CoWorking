@model List<TestCoWorking.Models.Employee>
@{
    ViewData["Title"] = "Користувачі";
    Layout = "_DevLayout";
}

<h1 class="text-center">Підписані працівники</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Ім'я</th>
                <th>Пошта</th>
                <th>Опис</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.FullName</td>
                    <td>@e.Email</td>
                    <td>@e.Description</td>
                    <td>
                        <form asp-action="DeleteEmployeer" asp-controller="Developer" asp-route-id="@e.Id">
                            <input type="submit" value="Видалити" class="form-control btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="text-center">Немає підписаних користувачів</h4>
}
