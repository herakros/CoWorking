@model TestCoWorking.Models.Booking
@{
    ViewData["Title"] = "Видалення бронювання";
    Layout = "_AdminLayout";
}

<h1 class="text-center">Видалення бронювання</h1>

<div class="container">
    <dl class="dl-horizontal">
        <dt class="text-center">Дані бронювання</dt>
        <dt>Ім'я</dt>
        <dd>@Model.Name</dd>
        <dt>Пошта</dt>
        <dd>@Model.DevEmail</dd>
        <dt>Початок</dt>
        <dd>@Model.Start</dd>
        <dt>Кінець</dt>
        <dd>@Model.End</dd>
    </dl>

    <div>
        <form asp-controller="Admin" asp-action="DeleteBooking" method="post">
            <div class="form-group">
                <input type="submit" class="form-control btn-danger" value="Видалити" />
            </div>
        </form>
    </div>
</div>

