@model TestCoWorking.Models.User
@{
    ViewData["Title"] = "Видалити користувача";
    Layout = "_AdminLayout";
}

<h1 class="text-center">Видалення користувача</h1>

<div class="container">
    <dl class="dl-horizontal">
        <dt class="text-center">Дані користувача</dt>
        <dt>Ім'я</dt>
        <dd>@Model.NickName</dd>

        <dt>Пошта</dt>
        <dd>@Model.Email</dd>
    </dl>

    <div>
        <form asp-controller="Admin" asp-action="DeleteUser" method="post">
            <div class="form-group">
                <input type="submit" class="form-control btn-danger" value="Видалити" />
            </div>
        </form>
    </div>
</div>

