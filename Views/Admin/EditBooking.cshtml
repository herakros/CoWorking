@model TestCoWorking.ViewModels.EditBookingModel
@{
    ViewData["Title"] = "Редагування бронювання";
    Layout = "_AdminLayout";
}


<form asp-action="EditBooking" asp-controller="Admin" method="post" asp-anti-forgery="true" class="form-group">
    <div asp-validation-summary="All" class="form-group"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id"/>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Ім'я</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DevEmail" class="control-label">Пошта Розробника</label>
        <input type="text" asp-for="DevEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeerCount" class="control-label">Кількість місць</label>
        <input type="number" asp-for="EmployeerCount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Start" class="control-label">Початок</label>
        <input type="date" asp-for="Start" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="End" class="control-label">Кінець</label>
        <input type="date" asp-for="End" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="form-control btn-success" />
    </div>
</form>

