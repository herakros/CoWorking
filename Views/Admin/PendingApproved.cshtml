@model TestCoWorking.Models.Booking[]

@{
    ViewData["Title"] = "PendingConfirm";
    Layout = "_AdminLayout";
}

<h1 class="text-center">Бронювання, що очікують на підтвердження</h1>

@if (Model.Length > 0)
{
    <div class="container">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Name</td>
                        <td>@u.DevEmail</td>
                        <td>@u.Start.ToString("d")</td>
                        <td>@u.End.ToString("d")</td>
                        <td><a asp-action="ConfirmBook" asp-controller="Admin" asp-route-id="@u.Id" class="btn btn-success">Переглянути</a></td>
                        <td><a asp-action="DeleteBooking" asp-controller="Admin" asp-route-id="@u.Id" class="btn btn-danger">Відхилити</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <h4 class="text-center">Немає нових бронювань</h4>
}

