@model TestCoWorking.VIewModels.RegisterModel
@{ 
    ViewData["Title"] = "Register";
}

<h1>Зареєструватись</h1>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Введіть пошту</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="NickName">Введіть ім'я</label><br />
            <input type="text" asp-for="NickName" />
        </div>
        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input type="text" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Підтвердіть пароль</label><br />
            <input type="text" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div><br />
            <label asp-for="Role">Виберіть вашу роль</label>
            <select asp-for="Role">
                <option></option>
                <option value="dev">Розробник</option>
                <option value="manager">Менеджер</option>
            </select>
        </div><br />
        <div>
            <input type="submit" value="Зареєструватись" class="btn btn-outline-dark"/>
        </div>
    </div>
</form>
