@model TestCoWorking.Models.Booking
@{
    ViewData["Title"] = "Додати";
    Layout = "_DevLayout";
}

<h1 class="text-center">Додати нове бронювання</h1>

<form asp-action="Add" asp-controller="Development" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="form-group">
            <label asp-for="Name">Ім'я</label><br />
            <input type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="UserCount">Кількість місць</label><br />
            <input type="number" asp-for="UserCount" />
        </div>
        <div class="form-group">
            <label asp-for="Start">Початок</label><br />
            <input type="date" asp-for="Start" />
        </div>
        <div class="form-group">
            <label asp-for="End">Кінець</label><br />
            <input type="date" asp-for="End" />
        </div>
        <div class="form-group">
            <input type="submit" value="Додати" class="form-control" />
        </div>
    </div>
</form>

